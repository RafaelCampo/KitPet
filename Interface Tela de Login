    private void AcessarActionPerformed(java.awt.event.ActionEvent evt) {                                        
       if( Login.getText().equals("Abel") && (Senha.getText().equals("123")) ){
            JOptionPane.showConfirmDialog(null, "Acesso Permitido");
            new TelaTrabalho().setVisible(true);
            this.dispose();
        }else{
            JOptionPane.showConfirmDialog(null, "Acesso Negado");
        }
    }                                       

    private void CancelarActionPerformed(java.awt.event.ActionEvent evt) {                                         
       System.exit(0);
    }                                        

    private void CadastroActionPerformed(java.awt.event.ActionEvent evt) {                                         
            new CadastroAnimal().setVisible(true);
            this.dispose();
    }                                        

